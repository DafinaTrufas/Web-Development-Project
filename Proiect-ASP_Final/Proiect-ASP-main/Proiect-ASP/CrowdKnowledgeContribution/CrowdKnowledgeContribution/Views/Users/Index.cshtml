@{
    ViewBag.Title = "Lista utilizatorilor";
}

<h1 class="titlu">@ViewBag.Title</h1>
<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

<div class="row">
    @foreach (var user in ViewBag.Users)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @user.UserName</p>
                        <p><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>
                        @if (@user.FirstName != null)
                        {
                            <p>Nume: @user.FirstName</p>
                        }
                        @if (@user.LastName != null)
                        {
                            <p>Prenume: @user.LastName</p>
                        }
                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Telefon: @user.PhoneNumber</p>
                        }
                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div> <a class="btn btn-sm btn-primary" href="/Users/Show/@user.Id"><i class="bi bi-person-gear"></i>Vizualizare utilizator</a> </div>
                        <div> <a class="btn btn-sm alert-success" href="/Users/Edit/@user.Id"><i class="bi bi-vector-pen"></i>Editare utilizator</a> </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<br />
<a class="btn alert-success" href="/Users/New"><i class="bi bi-person-add"></i>Adauga un nou utilizator</a>
<br />
