@{
    ViewBag.Title = "Lista categoriilor";
}

<h1 class="titlu">@ViewBag.Title</h1>
<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-secondary p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

<br />

<div class="row">
    @foreach (var category in ViewBag.Categories)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
                <div class="card-body d-flex justify-content-between flex-column">
                    <div class="d-flex flex-row justify-content-between p-3">
                        <p>@category.CategoryName</p>
                        <img src="@category.Icon" width="100" height="110" />
                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div> <a class="btn btn-sm btn-primary" href="/Categories/Show/@category.Id"><i class="bi bi-gear"></i>Vizualizare categorie</a> </div>
                        <div> <a class="btn btn-sm alert-success" href="/Categories/Edit/@category.Id"><i class="bi bi-vector-pen"></i>Editare categorie</a> </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br />
<a class="btn alert-success" href="/Categories/New"><i class="bi bi-file-plus"></i>Adauga o noua categorie</a>
<br />
