
<div class="card-body">

    <h3 class="card-title alert-secondary py-3 px-3 rounded-2">@Model.Title</h3>

    <div class="card-text">@Html.Raw(@Model.Content)</div>

    <div class="d-flex justify-content-between flex-row mt-5">

        <div><i class="bi bi-bookmark"></i>@Model.Category.CategoryName</div>

        <div><i class="bi bi-person"></i>@Model.User.UserName</div>

        <span class="alert-primary"><i class="bi bi-calendar"></i>@Model.Date</span>

    </div>

</div>
